package zoombee;

import java.util.Random;

public class Zombeee {
	Random random = new Random();
	
	
	String name;
	int pos;
	
	
	public Zombeee(String n, int p) {
		name = n;
		pos = p;
	}
	
	
	public void move() {
		pos = pos + random.nextInt(3)-1;
		System.out.println(name+"의 현재위치는" + pos + "입니다.");
		
		
		
	}

}
